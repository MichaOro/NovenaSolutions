---
import { NAV, HOME_ALIAS } from "../config/nav";
const raw = (Astro.url.pathname.replace(/\/+$/,"")) || "/";
const path = raw === "/" ? HOME_ALIAS : raw;
const active = NAV.find(i => i.href === path);
const html = active?.header ?? `<h1 class="text-2xl font-semibold">${active?.label ?? ""}</h1>`;
---
<div class="mb-4" set:html={html} />
